<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color"
    android:orientation="vertical">


    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/base_main_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_base_info_radius"
                android:paddingHorizontal="18dp"
                android:paddingVertical="28dp">

                <RelativeLayout
                    android:id="@+id/rl_top1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Today Team Deposit"
                        android:textColor="@color/base_main4"
                        android:textSize="@dimen/text_item_16" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:text="0.00"
                        android:textColor="@color/base_main_ff"
                        android:textSize="@dimen/text_title_18"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_top2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_top1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Total Team Deposit"
                        android:textColor="@color/base_main4"
                        android:textSize="@dimen/text_item_16" />

                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:text="0.00"
                        android:textColor="@color/base_main_ff"
                        android:textSize="@dimen/text_title_18"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_top2"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_base_info_radius2"
                    android:paddingVertical="18dp">

                    <RelativeLayout
                        android:id="@+id/rl_top3"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_btn_0026">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/tv_title_l1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Total Commissions:"
                                android:textColor="@color/base_main_ff"
                                android:textSize="@dimen/text_nom" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/tv_title_l1"
                                android:text="0.00"
                                android:textColor="@color/base_main_ff"
                                android:textSize="@dimen/text_item_16"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_top4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_top3"
                        android:layout_marginTop="18dp"
                        android:paddingHorizontal="18dp">

                        <TextView
                            android:id="@+id/tv_com1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Commismmions Yesterday"
                            android:textColor="@color/base_text_bla2"
                            android:textSize="@dimen/text_min2"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_com1"
                            android:text="0"
                            android:textColor="@color/base_text_bla2"
                            android:textSize="@dimen/text_item_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_com2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Commismmions Today"
                            android:textColor="@color/base_text_bla2"
                            android:textSize="@dimen/text_min2"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_com2"
                            android:layout_alignStart="@+id/tv_com2"
                            android:text="+ 0.00"
                            android:textColor="@color/base_text_bla2"
                            android:textSize="@dimen/text_item_16"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_top5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_top4"
                        android:layout_marginTop="18dp"
                        android:paddingHorizontal="18dp">

                        <TextView
                            android:id="@+id/tv_com3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team Cout"
                            android:textColor="@color/base_text_bla2"
                            android:textSize="@dimen/text_min2"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_com3"
                            android:text="0"
                            android:textColor="@color/base_text_bla2"
                            android:textSize="@dimen/text_item_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_com4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Today New Team          "
                            android:textColor="@color/base_text_bla2"
                            android:textSize="@dimen/text_min2"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_com4"
                            android:layout_alignStart="@+id/tv_com4"
                            android:text="+ 0.00"
                            android:textColor="@color/base_text_bla2"
                            android:textSize="@dimen/text_item_16"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="30dp"
                android:text="Invitation Link"
                android:textColor="@color/base_text_bla2"
                android:textSize="@dimen/text_title_18"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_0027">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:text="Link"
                    android:textColor="@color/base_text_bla2"
                    android:textSize="@dimen/text_item_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/iv_cp1"
                    android:text="s1023Msk2"
                    android:textColor="@color/base_text_bla2"
                    android:textSize="@dimen/text_item_16" />

                <ImageView
                    android:id="@+id/iv_cp1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/icon_pic_min07" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="30dp"
                android:text="More ways to invite"
                android:textColor="@color/base_text_bla2"
                android:textSize="@dimen/text_title_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_telegram"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/img_icon_size"
                        android:layout_height="@dimen/img_icon_size"
                        android:src="@drawable/icon_telegram" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_facebook"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/img_icon_size"
                        android:layout_height="@dimen/img_icon_size"
                        android:src="@drawable/facebook2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_whatapp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/img_icon_size"
                        android:layout_height="@dimen/img_icon_size"
                        android:src="@drawable/what" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qr"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/img_icon_size"
                        android:layout_height="@dimen/img_icon_size"
                        android:src="@drawable/qr_code" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/img_icon_size"
                        android:layout_height="@dimen/img_icon_size"
                        android:src="@drawable/share_2" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/base_main_view" />

            <RelativeLayout
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Detail"
                    android:textColor="@color/base_text_bla2"
                    android:textSize="@dimen/text_title_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_view"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:textColor="@color/base_main_text_bright"
                    android:textSize="@dimen/text_title_18"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:paddingVertical="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_0027">

                <RelativeLayout
                    android:id="@+id/rl_leve1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:text="Level A"
                        android:textColor="@color/base_text_bla2"
                        android:textSize="@dimen/text_item_16" />

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/tv_level1_data"
                        android:id="@+id/tv_level1_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/base_text_bla2"
                        android:textSize="@dimen/text_item_16" />

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/tv_level1_end1"
                        android:id="@+id/tv_level1_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.3%"
                        android:textColor="@color/base_text_bla2"
                        android:textSize="@dimen/text_item_16" />

                    <TextView
                        android:id="@+id/tv_level1_end1"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="0"
                        android:textColor="@color/base_text_bla2"
                        android:textSize="@dimen/text_item_16" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_ll"
                    android:layout_marginHorizontal="10dp"
                    android:layout_below="@+id/rl_leve1"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/base_main_view" />

                <RelativeLayout
                    android:layout_below="@+id/view_ll"
                    android:id="@+id/rl_leve2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:text="Level B"
                        android:textColor="@color/base_text_bla2"
                        android:textSize="@dimen/text_item_16" />

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/tv_level2_data"
                        android:id="@+id/tv_level2_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/base_text_bla2"
                        android:textSize="@dimen/text_item_16" />

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/tv_level2_end1"
                        android:id="@+id/tv_level2_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.3%"
                        android:textColor="@color/base_text_bla2"
                        android:textSize="@dimen/text_item_16" />

                    <TextView
                        android:id="@+id/tv_level2_end1"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="0"
                        android:textColor="@color/base_text_bla2"
                        android:textSize="@dimen/text_item_16" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>