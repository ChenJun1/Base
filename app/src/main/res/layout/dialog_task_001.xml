<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="@color/color_font_black_00"
        android:id="@+id/tv_title"
        android:text="@string/str_commt_task_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_close"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <RelativeLayout
        android:background="@drawable/bg_ll_001"
        android:layout_marginTop="30dp"
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <RelativeLayout
            android:id="@+id/rl_pic_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@color/color_f8" />

            <View
                android:layout_width="3dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@color/color_f8" />
        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_task_pic"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </RelativeLayout>


    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_bg"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/color_f8"
        android:text="@string/str_sure_commit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>