<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color"
    android:orientation="vertical">


    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/base_text_bal3" />

    <!--选项卡-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/status_bar_view"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_pic_006"
        android:padding="1dp"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/bg_btn_pic_005"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorHeight="32dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_pic_text2"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabTextColor="@color/color_pic_text2" />


    <com.base.kiap.widget.CustomViewPager
        android:layout_below="@+id/tabLayout"
        android:id="@+id/vp_dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>