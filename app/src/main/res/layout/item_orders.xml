<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line_orders"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/bg_btn_pic_0011"
    android:paddingLeft="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_btn_pic_0010"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <LinearLayout
                android:id="@+id/ll_l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ll_l2"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/usdt_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111111"
                    android:textColor="@color/color_font_black_21"
                    android:textSize="12sp" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/ll_l2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv_fuhao"
                    android:gravity="center_vertical"
                    android:text="Status"
                    android:textColor="#FF7D00"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_fuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="●"
                    android:textColor="#FF7D00"
                    android:textSize="10sp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:paddingHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_info01"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="info2:"
                    android:textColor="#86909C"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_lock1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="$3,301"
                    android:textColor="#4E5969"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/ll_info02"
                android:layout_below="@+id/ll_info01"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="info2:"
                    android:textColor="#86909C"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_lock3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="$3,301"
                    android:textColor="#4E5969"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ll_info02"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_info3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="info2:"
                    android:textColor="#86909C"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_lock4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="$3,301"
                    android:textColor="#4E5969"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_lock2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#4E5969"
                android:text="09:30am"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
