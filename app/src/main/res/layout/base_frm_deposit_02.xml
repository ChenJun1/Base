<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/top_l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Quota"
                    android:textColor="@color/base_main7"
                    android:textSize="@dimen/text_item_16" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_l3"
                    android:src="@drawable/eyeopen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="How Buy Quota"
                    android:textColor="@color/base_main7"
                    android:textSize="@dimen/text_item_16" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_l1"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_l11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0.00"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_l11"
                    android:text="INR"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_min2" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_sq"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/rl_top1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/qr_code" />


            <TextView
                android:id="@+id/tv_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_sq"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="18dp"
                android:text="Recharge Address:"
                android:textColor="@color/base_main7"
                android:textSize="@dimen/text_item_16" />

            <RelativeLayout
                android:id="@+id/rl_top04"
                android:layout_below="@+id/tv_ad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="18dp"
                    android:text="Tad238dj432sdf348dsfFAS"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />
                <ImageView
                    android:id="@+id/iv_cp1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/icon_pic_min07" />
            </RelativeLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rl_top04"
                android:layout_marginTop="20dp"
                android:background="@color/base_main_view" />

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn_0025"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ad"
                    android:layout_centerVertical="true"
                    android:text="Only Supports TRC20 network"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_01"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Calculator"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_ratio"
                    android:text="Ratio"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:id="@+id/tv_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_usdt_01"
                    android:text="1"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:id="@+id/tv_usdt_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_inr"
                    android:text=" USDT = "
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:id="@+id/tv_inr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/l_day"
                    android:text="4"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:id="@+id/l_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text=" INR"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />
            </RelativeLayout>

            <EditText
                android:id="@+id/ed_usd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_02"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_gray_border"
                android:padding="8dp" />


            <RelativeLayout
                android:id="@+id/rl_rl03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed_usd"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Estimated bonus:"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:id="@+id/tv_bonus_inr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_bonus"
                    android:text="1.90"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_bonus_inr"
                    android:text=" INR"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rl04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_rl03"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Estimated bonus:"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:id="@+id/tv_receive_inr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_receive"
                    android:text="1.90"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_receive_inr"
                    android:text=" INR"
                    android:textColor="@color/base_text_bla"
                    android:textSize="@dimen/text_title_18" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_rl04"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="20dp"
                android:text="* After the recharge is completed, please wait 3-5 minutes for the deposit to arrive."
                android:textColor="@color/base_text_bal3"
                android:textSize="@dimen/text_title_18" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>