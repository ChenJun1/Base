<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="9dp"
    android:background="@drawable/bg_btn_0017"
    android:layout_height="70dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/bg_btn_0018"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_title"
            android:layout_width="55dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center_horizontal"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/tv_title"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ll_title"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_financial_0027"
                android:textColor="@color/color_font_black_21"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_financial_0028"
                android:textColor="@color/color_font_black_a9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8%"
                android:textColor="@color/color_font_black_a9"
                android:textSize="16sp" />

        </LinearLayout>


        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_l1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/ll_title"
            android:text="@string/str_financicl_01"
            android:textColor="@color/color_font_black_21"
            android:textSize="14sp" />

        <TextView
            android:paddingVertical="2dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_btn_0016"
            android:id="@+id/tv_sum_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_l1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/bt_ok"
            android:text="+238%"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/bg_btn_00198"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:text="@string/str_financicl_02"
            android:textColor="@color/white_fa"
            android:textSize="12sp" />


    </RelativeLayout>
    <View
        android:background="@color/color_view_line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>