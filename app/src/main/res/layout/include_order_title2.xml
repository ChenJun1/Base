<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/color_pic_text2"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lv"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/str_pay_usdt_profit"
                android:textColor="@color/color_pic_text3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_btn_pic_003"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="@string/str_pay_usdt_but1"
                android:textAllCaps="false"
                android:textColor="@color/color_pic_text1"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:gravity="center_horizontal">
            <View
                android:layout_centerVertical="true"
                android:background="#E5E6EB"
                android:layout_width="0.5dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_task_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/color_pic_text2"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_task_sum"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/str_pay_usdt_num"
                android:textColor="@color/color_pic_text3"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_2"
                android:layout_marginTop="14dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal">
                <RelativeLayout
                    android:id="@+id/tv_share12"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_pic_003"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:paddingBottom="2dp"
                        android:text="@string/str_home_content3"
                        android:textColor="@color/color_pic_text1"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>