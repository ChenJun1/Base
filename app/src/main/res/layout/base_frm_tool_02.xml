<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_below="@+id/top_03"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="18dp"
        android:orientation="vertical">

        <com.base.kiap.widget.MRefreshNormalHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="18dp"
            android:id="@+id/home_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_add_bank"
        android:layout_below="@+id/view"
        android:gravity="center"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/bg_btn_0026"
        android:layout_width="match_parent"
        android:layout_height="36dp">


        <TextView
            android:layout_below="@+id/tv_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Add Withdraw Bank"
            android:textColor="@color/base_main_ff"
            android:textStyle="bold"
            android:textSize="@dimen/text_title_18" />

    </LinearLayout>


    <include layout="@layout/view_empty3" />

</RelativeLayout>