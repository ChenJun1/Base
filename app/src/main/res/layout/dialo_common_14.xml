<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/close_btn" />

            <LinearLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_close"
                android:background="@drawable/dialog_pic_006"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="@string/str_dialo_common_07"
                    android:textColor="@color/color_font_black_21"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                    <TextView
                        android:gravity="left"
                        android:minHeight="50dp"
                        android:maxHeight="300dp"
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="18dp"
                        android:paddingHorizontal="18dp"
                        android:text=""
                        android:textColor="@color/color_font_black_21"
                        android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#4dffffff" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/bt_no"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_0020"
                        android:text="@string/str_dialo_common_08"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/bt_yes"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_btn_009"
                        android:text="@string/str_dialo_common_08"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>


</RelativeLayout>