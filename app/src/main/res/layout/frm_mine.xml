<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/status_bar_view"
        android:orientation="vertical">

        <com.mobielwa.diki.widget.MRefreshNormalHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@color/colorPrimaryDark">

                    <ImageView
                        android:id="@+id/im_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/icon_pic_min1" />

                    <LinearLayout
                        android:id="@+id/ll_min1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im_min"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_my_name"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icon_pic_min2"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_min1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="18dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_my_invitation_code"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_code1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableRight="@drawable/icon_pic_min2"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_min2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="200dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_bg1_1">

                        <TextView
                            android:id="@+id/tv_001_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="@string/str_my_balance"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="5dp"
                            android:text="Rs 0"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_all_bg1_1">

                        <TextView
                            android:id="@+id/tv_001_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="@string/str_my_interest"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_team_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="5dp"
                            android:text="Rs 0"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_min3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_min2"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/white_all_bg1_1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/ll_treasure1"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_min01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min01" />

                        <TextView
                            android:id="@+id/tv_box_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_min01"
                            android:text="@string/str_my_information"
                            android:textColor="@color/color_pic_text2"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min06" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F2F3F5" />

                    <RelativeLayout
                        android:id="@+id/ll_team"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_min04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min02" />

                        <TextView
                            android:id="@+id/tv_box_time34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_min04"
                            android:text="Team"
                            android:textColor="@color/color_pic_text2"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min06" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F2F3F5" />

                    <RelativeLayout
                        android:id="@+id/ll_treasure13"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_min02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min03" />

                        <TextView
                            android:id="@+id/tv_box_time23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_min02"
                            android:text="@string/str_my_recharge"
                            android:textColor="@color/color_pic_text2"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min06" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F2F3F5" />

                    <RelativeLayout
                        android:id="@+id/ll_treasure14"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_min03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min04" />

                        <TextView
                            android:id="@+id/tv_box_time24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_min03"
                            android:text="@string/str_my_record"
                            android:textColor="@color/color_pic_text2"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min06" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F2F3F5" />

                    <RelativeLayout
                        android:id="@+id/ll_treasure25"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_min05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min05" />

                        <TextView
                            android:id="@+id/tv_box_time45"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_min05"
                            android:text="Help"
                            android:textColor="@color/color_pic_text2"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_pic_min06" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_min3"
                    android:background="@drawable/white_all_bg1_1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_01_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="3dp"
                                android:text="@string/str_pay_card_invate_code"
                                android:textColor="#86909C"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tv_01_1"
                                android:drawableRight="@drawable/icon_pic_min07"
                                android:gravity="right"
                                android:textColor="@color/color_pic_text2"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:visibility="gone"
                                android:id="@+id/tv_code_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bg_btn_0019"
                                android:gravity="center"
                                android:text="@string/str_pay_mine_copy"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_myteam_identity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="3dp"
                                android:text="@string/str_pay_card_invate_link"
                                android:textColor="#86909C"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_team_vip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tv_myteam_identity"
                                android:text=""
                                android:textColor="@color/color_pic_text2"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/tv_link_copy"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_btn_pic_007"
                        android:gravity="center"
                        android:text="@string/str_pay_mine_copy_link"
                        android:textAllCaps="false"
                        android:textColor="@color/color_pic_text1"
                        android:textSize="14sp" />

                </LinearLayout>

                <!--                <include layout="@layout/include_mine_title" />-->

<!--        <include layout="@layout/include_mine_title_1" />-->

        <include layout="@layout/include_myteam_01" android:visibility="gone" />

            </RelativeLayout>
        </ScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.mobielwa.diki.widget.DragFloatActionButton
        android:id="@+id/circle_button"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="80dp"
        android:clickable="true"
        android:src="@drawable/service" />
</RelativeLayout>