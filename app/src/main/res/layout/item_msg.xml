<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:padding="10dp"
    android:background="@drawable/bg_btn_0033"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_centerVertical="true"
            android:id="@+id/view_1"
            android:background="@drawable/bg_btn_0032"
            android:layout_width="6dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/view_1"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:text="HKPAY"
            android:textSize="@dimen/text_item_16"
            android:textColor="@color/base_text_bla2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
    <TextView
        android:paddingRight="20dp"
        android:text="asdsdhashdahsdh"
        android:textSize="@dimen/text_nom"
        android:textColor="@color/base_text_bal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:text="2024-07-17 10:01:31"
            android:textColor="@color/base_main7"
            android:textSize="@dimen/text_nom" />

        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:text="Check"
            android:textColor="@color/base_text_bla2"
            android:textSize="@dimen/text_item_16" />

    </RelativeLayout>

</LinearLayout>