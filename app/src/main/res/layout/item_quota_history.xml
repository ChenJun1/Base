<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="18dp">

        <TextView
            android:id="@+id/tv_inr_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="640.00"
            android:textColor="@color/base_text_bla"
            android:textSize="@dimen/text_item_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Deducted"
            android:textColor="@color/colorf8"
            android:textSize="@dimen/text_item_16"/>


    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="18dp">


        <TextView
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remak: receiver deducted"
            android:textColor="@color/base_text_bla2"
            android:textSize="@dimen/text_nom" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orderno:23023421032403240"
            android:textColor="@color/base_main7"
            android:textSize="@dimen/text_nom" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:text="2024-07-17"
                android:textColor="@color/base_main7"
                android:textSize="@dimen/text_nom" />

            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:text="Details"
                android:textColor="@color/base_main7"
                android:textSize="@dimen/text_item_16" />

        </RelativeLayout>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_main_view" />


</LinearLayout>