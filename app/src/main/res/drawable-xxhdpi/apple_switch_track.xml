<!-- apple_switch_track.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CD964" /> <!-- 开启状态的颜色 -->
            <corners android:radius="16dp" /> <!-- 圆角半径，与滑块一致 -->
            <size android:width="64dp" android:height="32dp" /> <!-- 轨道的大小 -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#E5E5EA" /> <!-- 关闭状态的颜色 -->
            <corners android:radius="16dp" /> <!-- 圆角半径，与滑块一致 -->
            <size android:width="64dp" android:height="32dp" /> <!-- 轨道的大小 -->
        </shape>
    </item>
</selector>
