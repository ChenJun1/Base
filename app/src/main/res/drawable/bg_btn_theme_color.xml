<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点击背景 -->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="3dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <solid android:color="@color/color_fb" />
        </shape>
    </item>

    <!-- 不可用时的背景 -->
    <item android:state_enabled="false">

        <shape>
            <corners android:radius="3dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <solid android:color="@color/color_bd" />
        </shape>
    </item>

    <!-- 默认背景 -->
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="3dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <solid android:color="@color/color_f8" />
        </shape>
    </item>

</selector>